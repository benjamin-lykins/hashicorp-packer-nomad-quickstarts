    retry_join = ["provider={{ nomad_cloud_provider }} tag_key=nomad_cluster tag_value={{ nomad_datacenter }}"]
  }

  encrypt = "VVW8zQwZmNe3j+BxNJkZUK/ADaDsc2bCklu5KnK/wbQ="

